<h1>VendorSweet Create</h1>

<% if flash[:errors] %>
    <% flash[:errors].each do |error| %>
        <p><%= error %></p>
        <%end%>
<%end%>

<%= form_for @vendor_sweet do |f| %>
    <%= f.label :vendor %>
    <%= f.collection_select :vendor_id, @vendors, :id, :name%>

    <%= f.label :sweet %>
    <%= f.collection_select :sweet_id, @sweets, :id, :name%>

    <%= f.label :price %>
    <%= f.number_field :price %>

    <%= f.submit "Submit VendorSweet" %>
<% end %>